<%- include('../partials/header.ejs') %>
<%- include('../partials/navbar.ejs') %>

<div class="container">
    <div class="card mx-5 my-3">
        <div class="card-header ">
            Criar Pelotão
        </div>
        <div class="card-body">
            
            <form action="/admin/platoon/save" method="post">
                <label for="">Esquadrão</label>
                <select class="form-select" name="esquad">
                    <% esquads.forEach(esquad => { %>   
                    <option value="<%= esquad.id %>"><%= esquad.nome %></option>
                    <% }); %>
                  </select>
                <label for="esquad">Nome do Pelotão</label>
                <input type="text" name="platoon">
                <button class="btn btn-success">Criar</button>
            </form>
        </div>
      </div>
</div>



